<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/iv_thumbnail_photo_session_item"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="@dimen/horizontal_margin_padding"
            android:layout_marginEnd="@dimen/horizontal_margin_padding"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_photo_session_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_margin_padding"
            android:layout_marginTop="8dp"
            android:text="Bandung Pro Photo Session"
            android:textColor="@android:color/black"
            android:textSize="@dimen/heading_3"
            app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail_photo_session_item"/>

    <TextView
            android:id="@+id/tv_photo_session_long_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_padding"
            android:text="3 hr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_session_title_item"/>

    <TextView
            android:id="@+id/tv_photo_session_divider_desc_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_padding"
            android:text="|"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/tv_photo_session_long_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_session_title_item"/>

    <TextView
            android:id="@+id/tv_photo_session_price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_padding"
            android:text="Rp. 2,000,000"
            app:layout_constraintStart_toEndOf="@+id/tv_photo_session_divider_desc_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_session_title_item"/>

    <Button
            android:id="@+id/btn_photo_session_book_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_padding"
            android:layout_marginTop="@dimen/vertical_margin_padding"
            android:layout_marginEnd="@dimen/horizontal_margin_padding"
            android:background="@drawable/button_standard"
            android:text="Book It"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/heading_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_session_price_item"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/concrete"
            app:layout_constraintTop_toBottomOf="@+id/btn_photo_session_book_item"
            tools:layout_editor_absoluteX="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>