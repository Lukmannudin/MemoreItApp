<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStandard" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginStart">@dimen/horizontal_margin_padding</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_padding</item>
        <item name="android:layout_marginTop">270dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_standard</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:paddingTop">@dimen/vertical_margin_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_padding</item>
    </style>

</resources>
